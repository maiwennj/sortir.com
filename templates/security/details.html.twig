{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}
    <h1>Profil de {{ user.username }}</h1>
    <p>Identifiant de connexion : {{ user.username }}</p>
    <p>Prénom : {{ user.profile.firstName }}</p>
    <p>Nom : {{user.profile.lastName }}</p>
    <p>Téléphone : {{ user.profile.phoneNumber }}</p>
    <p>Adresse email : {{ user.profile.emailAdress }}</p>

{#    à supprimer après les test #}
        <p>ID de l'utilisateur affiché : {{ user.id }}</p>
        <p>ID de l'utilisateur connecté : {{ app.user.id }}</p>

    {% if app.user and app.user.id == user.id %}
        <a class="btn btn-secondary" href="{{ path('user_update') }}">Update profile</a>
    {% endif %}

{% endblock %}
