{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}
    <h1>Profil de {{ user.username }}</h1>
    <p>Identifiant : {{ user.username }}</p>
    <p>Prénom : {{ user.userProfile.firstName }}</p>
    <p>Nom : {{user.userProfile.lastName }}</p>
    <p>Téléphone : {{ user.userProfile.phoneNumber }}</p>
    <p>Adresse email : {{ user.userProfile.emailAdress }}</p>

        <a class="btn btn-secondary" href="{{ path('user_update') }}">Update profile</a>


{% endblock %}
